{
  "permissions": {
    "allow": [
      "Bash(make show:*)",
      "Bash(make build:*)",
      "Bash(echo:*)",
      "Bash(chkstow:*)",
      "Bash(readlink:*)",
      "Bash(ps:*)",
      "Bash(zsh -c 'echo $fpath')",
      "Bash(ln:*)",
      "Bash(GIT_DIR=~/stow/git-tools/.git GIT_WORK_TREE=~/stow/git-tools git status:*)",
      "Bash(GIT_DIR=~/stow/git-tools/.git GIT_WORK_TREE=~/stow/git-tools git diff:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*password*)",
      "Read(**/*credential*)",
      "Read(**/*api_key*)",
      "Read(**/.git/config)"
    ]
  }
}
